{
  "presets": [
    ["env", {
      "modules": false
    }]
  ],

  "plugins": [ // es6 build
    "syntax-object-rest-spread",
    "transform-object-rest-spread",
    "transform-runtime",
    ["babel-plugin-transform-builtin-extend", {
      "globals": ["Error", "Array"],
      "approximate": true
    }]
  ],

  "env": {
    "cjs": {
      "presets": [
        ["env", {
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        "add-module-exports",
        ["babel-plugin-transform-builtin-extend", {
          "globals": ["Error"],
          "approximate": true
        }]
      ]
    },
    "development": {
      "presets": [
        ["env", {
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        "add-module-exports",
        ["babel-plugin-transform-builtin-extend", {
          "globals": ["Error"],
          "approximate": true
        }]
      ]
    },
    "production": {
      "presets": [
        ["env", {
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        "add-module-exports",
        ["babel-plugin-transform-builtin-extend", {
          "globals": ["Error"],
          "approximate": true
        }]
      ]
    },
    "test": {
      "presets": [
        ["env", {
          "useBuiltIns": true,
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        "add-module-exports",
        ["babel-plugin-transform-builtin-extend", {
          "globals": ["Error"],
          "approximate": true
        }],
        ["istanbul", {
          "exclude": [
            "**/*.spec.js",
            "**/node.js"
          ]
        }]
      ]
    }
  }
}
