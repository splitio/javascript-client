{
  "presets": [
    "latest",
    "flow"
  ],

  "plugins": [
    "syntax-async-functions",       // handle async/await syntax
    "syntax-object-rest-spread",    // usage of ... in objects

    "transform-async-to-generator", // async/await => generators
    "transform-regenerator",        // generators => something runnable
    "transform-object-rest-spread", // usage of ... in objects
    "transform-runtime"             // automatic polyfilling
  ],

  "env": {
    "test": {
      "plugins": [
        ["istanbul", {
          "exclude": [
            "**/*.spec.js",
            "**/node.js"
          ]
        }]
      ]
    }
  }
}
